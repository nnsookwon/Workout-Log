<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerItemStyle">@style/Option_Style</item>
    </style>

    <style name="Splash_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Option_Style">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">16sp</item>
        <item name="android:textColor">#000080</item>
    </style>

    <style name="Screen_Format">
        <item name="android:padding"> 16dp</item>
    </style>

    <style name="Header_Date">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#000080</item>
    </style>

    <style name="Log_Entry">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">#EBF4FA</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Log_Entry_Header">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Log_Entry_Sets">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="B_Add">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="Plain_Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="B_Menu_Options">
        <item name="android:src">@drawable/menu_options</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">showMenuOptions</item>
        <item name="android:paddingTop">8dp</item>
       <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Edit_Entry_Header">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#000080</item>
    </style>

    <style name="Edit_Entry_Weight">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Edit_Entry_Reps">
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Edit_Entry_Mid_Col">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="b_plus_minus">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

</resources>
