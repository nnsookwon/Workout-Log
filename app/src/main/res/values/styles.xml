<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Splash_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Screen_Format">
        <item name="android:padding"> 16dp</item>
    </style>

    <style name="Header_Date">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#000080</item>
    </style>

    <style name="Log_Entry">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">#EBF4FA</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Log_Entry_Exercise">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Log_Entry_Sets">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="B_Add">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Plain_Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="B_EditEntry">
        <item name="android:src">@drawable/edit</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">goToEditEntry</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="B_Add_To_Entry">
        <item name="android:src">@drawable/plus</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">goToAddToEntry</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    B_Add_To_Entry

    <style name="Edit_Entry_Header">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#000080</item>
    </style>

    <style name="Edit_Entry_Weight">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Edit_Entry_Reps">
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Edit_Entry_Mid_Col">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
